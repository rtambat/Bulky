@model List<Category>;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="text-end align-content-center">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Category">
                    <i class="bi bi-plus-lg"></i> Add Category
                </a>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        var tm = "#myModal" + category.CategoryId;
                        var mid = "myModal" + category.CategoryId;
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                @category.DisplayOrder
                            </td>
                            <td>
                                <div class="d-flex justify-content-end">
                                    <a asp-controller="Category" asp-action="Category" asp-route-categoryId="@category.CategoryId" class="btn btn-outline-primary mx-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-danger" id="btnDelete" data-bs-toggle="modal" data-bs-target="@tm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                                <div class="modal fade" id="@mid" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="myModal" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header border-0">
                                                <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure want to delete this item?
                                            </div>
                                            <div class="modal-footer border-0">
                                                <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.CategoryId" id="myModelDltBtn" class="btn btn-danger mr-1">
                                                    Delete
                                                </a>
                                                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>