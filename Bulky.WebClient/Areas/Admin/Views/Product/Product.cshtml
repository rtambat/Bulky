@model Product;

<div class="card shadow border-0 my-4 col-md-8">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Title" placeholder="Product name" />
                    <label class="ms-2" asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea class="form-control border-0 shadow h-auto" asp-for="Description" placeholder="Product order" ></textarea>
                    <label class="ms-2" asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Auther" placeholder="Product order" />
                    <label class="ms-2" asp-for="Auther"></label>
                    <span asp-validation-for="Auther" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ISBN" placeholder="Product order" />
                    <label class="ms-2" asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ListPrice" placeholder="Product order" />
                    <label class="ms-2" asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price" placeholder="Product order" />
                    <label class="ms-2" asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price50" placeholder="Product order" />
                    <label class="ms-2" asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price100" placeholder="Product order" />
                    <label class="ms-2" asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <a class="btn btn-outline-primary border form-control" asp-controller="Product" asp-action="Products">Cancel</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <button class="btn btn-primary form-control">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
